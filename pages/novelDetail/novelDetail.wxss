.container {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.cover {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.info {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.author {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.summary {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}

.chapters {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.chapter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.chapter-header text:first-child {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.chapter-header text:last-child {
  font-size: 28rpx;
  color: #87CEEB;
}

.chapter-list {
  margin-bottom: 20rpx;
}

.chapter-item {
  padding: 25rpx 0;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.chapter-item:last-child {
  border-bottom: none;
}

.chapter-item text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

