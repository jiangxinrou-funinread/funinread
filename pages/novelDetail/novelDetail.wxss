.container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.cover-container {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.cover {
  width: 200rpx;
  height: 280rpx;
  border-radius: 10rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.1);
}

.title-author {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.author {
  font-size: 28rpx;
  color: #666;
}

.detail-box {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
}

.detail-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.chapter-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #13227a;
  margin-bottom: 20rpx;
}

.chapter-list {
  display: flex;
  flex-direction: column;
}

.chapter-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.chapter-item:last-child {
  border-bottom: none;
}

.chapter-title {
  font-size: 28rpx;
  color: #333;
} 