.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.history-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
  margin-bottom: 20rpx;
  width: 100%;
}

.book-cover {
  width: 140rpx;
  height: 180rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.book-info {
  flex: 1;
}

.book-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.book-author {
  font-size: 26rpx;
  color: #999;
}

.no-history {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  font-size: 28rpx;
  color: #999;
} 