.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 顶部栏目 */
.tabs-swiper {
  width: 100%;
  margin-bottom: 30rpx;
}

.tabs {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
  padding: 20rpx;
}

.tab {
  font-size: 30rpx;
  color: #666;
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.tab.active {
  color: #87CEEB;
  background-color: #e6f3ff;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(135, 206, 235, 0.2);
}

/* 点击效果 */
.tab:active {
  background-color: #d1e9f7;
  transform: scale(0.95);
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border-radius: 20rpx;
  padding: 15rpx 20rpx;
  box-shadow: none;
  margin-bottom: 30rpx;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  border: 1rpx solid #e0e0e0;
}

.search-input {
  flex: 1;
  border: none;
  padding: 10rpx;
  font-size: 28rpx;
  color: #999;
  background-color: transparent;
}

.search-btn {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  border: none;
  background-color: transparent;
}

/* 轮播图 */
.swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

/* 功能按钮 */
.buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
}

.button {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 30rpx;
}

.button-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.button-text {
  font-size: 24rpx;
  color: #666;
}

/* 推荐区域 */
.section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
  width: 100%;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #13227a;
  text-decoration: underline;
}

.novel-list {
  display: flex;
  justify-content: space-between;
}

.novel-item {
  width: 30%;
}

.novel-cover {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.novel-title {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  margin-top: 10rpx;
}

.home-page {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.nav-bar {
  background-color: #87CEEB;
  color: white;
  font-size: 34rpx;
  font-weight: 500;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.1);
}

.category-recommend {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
}

.category-item {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  margin: 15rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s ease;
}

.category-item:active {
  background-color: #e6f3ff;
}

.hot-novel-recommend {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
}

.novel-info {
  padding: 20rpx;
}

.novel-author {
  font-size: 24rpx;
  color: #999;
}