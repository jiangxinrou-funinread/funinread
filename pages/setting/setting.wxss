.container {
  padding: 20px;
}

.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.change-avatar-txt {
  color: #000000;
}

.save-btn {
  width: 80%;
  margin: 20px auto;
  background-color: #87CEEB;
  color: white;
  border-radius: 10px;
  padding: 1px;
  text-align: center;
}
