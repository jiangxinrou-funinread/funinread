/* postDetail.wxss */
.container {
  padding: 10px;
}

.cover-image {
  width: 100%;
  height: 200px;
  border-radius: 10px;
}

.post-content {
  margin-top: 10px;
}

.post-header {
  display: flex;
  align-items: center;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.author-name {
  font-size: 16px;
  color: #333;
}

.post-title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

.post-text {
  font-size: 14px;
  color: #666;
  margin-top: 5px;
}

.comments {
  margin-top: 20px;
}

.comment {
  display: flex;
  margin-bottom: 10px;
}

.comment-body {
  flex: 1;
  margin-left: 10px;
}

.comment-author {
  font-size: 16px;
  color: #333;
}

.comment-text {
  font-size: 14px;
  color: #666;
  margin-top: 5px;
}

.comment-input {
  display: flex;
  margin-top: 20px;
}

input {
  flex: 1;
  height: 40px;
  border: 1px solid #eee;
  border-radius: 20px;
  padding: 0 10px;
}

button {
  margin-left: 10px;
  width: 60px;
  height: 40px;
  line-height: 40px;
  border-radius: 20px;
  background-color: #87CEEB;
  color: white;
  border: none;
}
