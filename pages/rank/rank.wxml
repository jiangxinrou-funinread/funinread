<!-- novelRank.wxml -->
<view class="container">
  <!-- 热门小说榜单 -->
  <view class="rank-section">
    <text class="section-title">热门小说榜单</text>
    <view class="rank-list">
      <block wx:for="{{hotNovels}}" wx:key="id">
        <view class="rank-item">
          <text class="rank-number">{{index + 1}}</text>
          <image class="novel-cover" src="{{item.cover}}" mode="aspectFill"></image>
          <view class="novel-info">
            <text class="novel-title">{{item.title}}</text>
            <text class="novel-author">{{item.author}}</text>
          </view>
        </view>
      </block>
    </view>
  </view>

  <!-- 今日榜单 -->
  <view class="rank-section">
    <text class="section-title">今日榜单</text>
    <view class="rank-list">
      <block wx:for="{{todayNovels}}" wx:key="id">
