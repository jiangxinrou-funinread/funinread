.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.rank-list {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
}

.rank-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.rank-item:last-child {
  border-bottom: none;
}

.novel-cover {
  width: 140rpx;
  height: 180rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.novel-info {
  flex: 1;
}

.novel-title {
  font-size: 30rpx;
  color: #13227a;
  margin-bottom: 10rpx;
}

.novel-author {
  font-size: 26rpx;
  color: #999;
} 