.container {
  padding: 40rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  width: 100%;
}

.label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.input {
  font-size: 32rpx;
  color: #333;
  padding: 10rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  background-color: #f9f9f9;
  width: 100%;
}

.textarea {
  font-size: 32rpx;
  color: #333;
  padding: 10rpx;
  height: 200rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  background-color: #f9f9f9;
  width: 100%;
}

.topic-options {
  margin-top: 10rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  width: 100%;
}

.topic-option {
  font-size: 28rpx;
  color: #333;
  padding: 15rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.topic-option:last-child {
  border-bottom: none;
}

.submit-btn {
  background-color: #13227a;
  color: #fff;
  border-radius: 16rpx;
  font-size: 32rpx;
  padding: 20rpx;
  width: 100%;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
} 