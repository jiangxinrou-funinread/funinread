.container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 分类列表 */
.category-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.category-item {
  width: 30%; /* 减小按钮宽度 */
  height: 45rpx; /* 固定按钮高度 */
  background-color: #fff;
  border-radius: 12rpx;
  padding: 10rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中 */
}

.category-icon {
  width: 40rpx; /* 减小图标大小 */
  height: 40rpx;
  margin-bottom: 5rpx;
}

.category-name {
  font-size: 28rpx; /* 增大文字大小 */
  color: #333;
  text-align: center; /* 确保文字居中 */
} 