.container {
  padding: 40rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.topic-detail {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
  margin-bottom: 40rpx;
  width: 100%;
}

.topic-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.topic-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #13227a;
}

.topic-info {
  flex: 1;
}

.topic-author {
  font-size: 32rpx;
  color: #13227a;
  font-weight: 600;
  margin-bottom: 5rpx;
}

.topic-time {
  font-size: 24rpx;
  color: #999;
}

.topic-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.topic-content-box {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.topic-content {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
}

.topic-tag {
  font-size: 28rpx;
  color: #13227a;
  margin-bottom: 20rpx;
}

.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

.topic-footer {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.topic-action {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

.action-text {
  font-size: 24rpx;
  color: #999;
}

.comment-list {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
  padding: 30rpx;
  height: 60vh;
  margin-bottom: 120rpx;
  overflow-y: auto;
  width: 100%;
}

.comment-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #13227a;
}

.comment-info {
  flex: 1;
}

.comment-author {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-content {
  font-size: 28rpx;
  color: #666;
}

.no-comment {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  font-size: 28rpx;
  color: #999;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.1);
}

.footer-actions {
  display: flex;
  align-items: center;
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.action-text {
  font-size: 28rpx;
  color: #666;
}

.comment-input-area {
  flex: 1;
  display: flex;
  align-items: center;
}

.comment-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 10rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  background-color: #f9f9f9;
  margin-right: 20rpx;
}

.comment-submit-btn {
  background-color: #13227a;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.delete-btn {
  margin-left: auto;
  color: #ff4d4f;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  background-color: #fff2f0;
  cursor: pointer;
}