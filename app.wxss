/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 全局字体设置 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 全局按钮样式 */
button {
  background-color: #13227a;
  color: #fff;
  border-radius: 20rpx;
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  transition: all 0.2s ease;
}

button:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 全局输入框样式 */
input {
  background-color: #f5f7fa;
  border-radius: 20rpx;
  padding: 15rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e0e0e0;
}

/* 全局卡片样式 */
.card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
}

/* 全局标题样式 */
.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #13227a;
  margin-bottom: 20rpx;
}

/* 全局副标题样式 */
.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

/* 全局文本样式 */
.text {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
} 
